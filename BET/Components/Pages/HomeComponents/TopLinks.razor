@using Common
@rendermode InteractiveServer

<div class="py-16 sm:py-24">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:text-center">
            <h2 class="text-base font-semibold text-accent">Nossos Links</h2>
            <p class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl lg:text-balance">
                Links de Ouro: As Melhores Oportunidades
            </p>
            <p class="mt-6 text-lg text-gray-600">
                Esta é a nossa seleção especial dos links mais quentes do momento.
                Aproveite as promoções exclusivas e comece a ganhar agora mesmo.
            </p>
        </div>

        @if (isLoading)
        {
            <div class="mt-12 flex justify-center">
                <div class="w-10 h-10 border-4 border-t-accent border-gray-300 rounded-full animate-spin"></div>
            </div>
        }
        else if (Links.Count == 0)
        {
            <div class="mt-12 text-center">
                <p class="text-gray-500 text-lg">Nenhum link disponível no momento.</p>
            </div>
        }
        else
        {
            <div class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
                @foreach (var link in Links)
                {
                    <div
                        class=" rounded-2xl shadow-lg overflow-hidden flex flex-col border border-gray-200 card">
                        <img src="@link.ImageUrl" alt="@link.Name" class="h-48 w-full object-cover"/>
                        <div class="p-6 flex-1 flex flex-col w-full">
                            <div class="flex justify-between items-start">
                                <h3 class="text-xl font-bold text-gray-900">@link.Name</h3>
                                @if (link.IsHighlighted)
                                {
                                    <span
                                        class="px-2 py-1 text-xs font-medium rounded-full bg-accent  text-secondary">
                                        Destaque
                                    </span>
                                }
                            </div>
                            <p class="mt-2 text-gray-600 flex-1 truncate">
                                @link.Description
                            </p>
                            <div class="mt-4">
                                <span class="font-medium text-gray-700">Bônus:</span>
                                <p class="text-gray-600 text-sm truncate">@link.BonusInfo</p>
                            </div>
                            <a onclick="fbq('trackCustom', 'Link Clicado - @link.Name', {Endereço: '@link.AffiliateUrl'});"
                                href="@link.AffiliateUrl"
                                target="_blank"
                                class="mt-4 inline-flex items-center justify-center rounded-xl bg-accent px-4 py-2 text-white font-semibold hover:scale-105 transition">
                                Acessar Link
                            </a>
                        </div>
                    </div>
                }
            </div>

            @if (showLoadMore)
            {
                <div class="mt-12 text-center">
                    <button @onclick="LoadMoreLinks"
                            class="inline-flex items-center rounded-md bg-accent px-6 py-3 text-base font-semibold text-white shadow-sm hover:scale-105 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent">
                        Carregar Mais Links
                        <svg class="ml-2 -mr-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                             fill="currentColor">
                            <path fill-rule="evenodd"
                                  d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z"
                                  clip-rule="evenodd"/>
                        </svg>
                    </button>
                </div>
            }
        }
    </div>
</div>

<!-- Modal de Detalhes do Link -->
@if (showModal)
{
    <div class="fixed inset-0 z-50 overflow-y-auto">
        <!-- Backdrop - deve vir primeiro -->
        <div class="fixed inset-0 bg-gray-500 opacity-75 transition-opacity" aria-hidden="true"></div>

        <!-- Modal -->
        <div class="flex min-h-screen items-center justify-center p-4">
            <div
                class="relative transform overflow-hidden rounded-lg  text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
                <div class=" px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
                            <h3 class="text-2xl leading-6 font-semibold text-gray-900">
                                @selectedLink!.Name
                            </h3>
                            <div class="mt-4">
                                <img src="@selectedLink.ImageUrl" alt="@selectedLink.Name"
                                     class="h-40 w-full object-cover rounded-lg mx-auto">

                                <div class="mt-4 w-full">
                                    <p class="text-gray-600 text-lg">@selectedLink.Description</p>

                                    <div class="mt-4">
                                        <span class="font-medium text-gray-700">Bônus:</span>
                                        <p class="text-gray-600">@selectedLink.BonusInfo</p>
                                    </div>

                                    <div class="mt-4">
                                        <span class="font-medium text-gray-700">Status:</span>
                                        @if (selectedLink.IsHighlighted)
                                        {
                                            <span
                                                class="ml-2 px-2 py-1 text-xs font-medium rounded-full bg-green-900">
                                                Ativo
                                            </span>
                                        }
                                    </div>

                                    <div class="mt-4">
                                        <span class="font-medium text-gray-700">URL:</span>
                                        <a href="@selectedLink.AffiliateUrl" target="_blank"
                                           class="block mt-1 text-blue-600 hover:text-blue-800 truncate">
                                            @selectedLink.AffiliateUrl
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <a href="@selectedLink.AffiliateUrl" target="_blank"
                       class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-accent text-base font-medium text-white hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary sm:ml-3 sm:w-auto sm:text-sm">
                        Acessar Link
                    </a>
                    <button type="button" @onclick="CloseModal"
                            class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2  text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                        Fechar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<AffiliateLinkDto> Links { get; set; } = new();
    private AffiliateLinkDto? selectedLink = null;
    private bool isLoading = true;
    private bool showModal = false;
    private bool showLoadMore = false;
    private int currentPage = 1;
    private const int PageSize = 6;

    protected override async Task OnInitializedAsync()
    {
        await LoadLinks();
    }

    private async Task LoadLinks()
    {
        isLoading = true;
        var allLinks = await LinkService.GetAllAsync();

        // Paginação simples
        Links = allLinks.Take(PageSize).ToList();
        showLoadMore = allLinks.Count > PageSize;

        isLoading = false;
    }

    private async Task LoadMoreLinks()
    {
        currentPage++;
        var allLinks = await LinkService.GetAllAsync();
        var newLinks = allLinks.Skip((currentPage - 1) * PageSize).Take(PageSize).ToList();

        Links.AddRange(newLinks);
        showLoadMore = allLinks.Count > currentPage * PageSize;
    }

    private void ShowLinkDetails(AffiliateLinkDto link)
    {
        selectedLink = link;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        selectedLink = null;
    }

    // Estilos inline para o efeito de truncate
    private string lineClampStyle = "display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;";
}